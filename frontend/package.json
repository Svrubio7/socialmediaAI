{
  "name": "social-media-ai-frontend",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev --port 3001",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "lint": "eslint . --no-error-on-unmatched-pattern",
    "lint:fix": "eslint . --fix --no-error-on-unmatched-pattern",
    "typecheck": "nuxt typecheck",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:e2e": "playwright test",
    "test:editor-integration:playwright": "playwright test --config playwright.integration.config.ts --grep @editor-integration",
    "test:editor-integration": "npm run verify:editor",
    "verify:editor": "powershell -ExecutionPolicy Bypass -File ../verify-editor.ps1"
  },
  "dependencies": {
    "@nuxtjs/i18n": "^10.2.1",
    "@nuxtjs/supabase": "^1.4.0",
    "@pinia/nuxt": "^0.5.5",
    "@vueuse/core": "^10.11.0",
    "@vueuse/nuxt": "^10.11.0",
    "axios": "^1.7.0",
    "date-fns": "^3.6.0",
    "lucide-vue-next": "^0.563.0",
    "nuxt": "^3.14.0",
    "pinia": "^2.2.0",
    "vue": "^3.5.0"
  },
  "devDependencies": {
    "@nuxt/devtools": "^1.6.0",
    "@nuxtjs/tailwindcss": "^6.12.0",
    "@types/node": "^22.10.0",
    "@playwright/test": "^1.54.2",
    "@vue/test-utils": "^2.4.6",
    "eslint": "^8.57.0",
    "happy-dom": "^15.11.7",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.4.0",
    "typescript": "^5.7.0",
    "vitest": "^2.1.9",
    "vue-tsc": "^3.2.2"
  }
}
